extends layout

block content
  main(role="main")

    div.post
      h1
          = tag

    p
    div(class="container")

    div(class="row")  
      each post in postsWithTag(tag)
        div(class="col-md-4")
          div(class="card mb-4 shadow-sm")
            img(src=post.img height="250px")
            div(class="card-body")
              p(class="card-text") 
                != post.preview
  

